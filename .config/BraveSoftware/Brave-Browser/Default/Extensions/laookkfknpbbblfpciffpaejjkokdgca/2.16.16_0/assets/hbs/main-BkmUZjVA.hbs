					--><div class="select-wrapper">
						<select class="balance-time" data-time="minute" data-side="end">
							<option selected>00</option>
							<option>15</option>
							<option>30</option>
							<option>45</option>
						</select>
					</div>
						{{#if hour24}} &nbsp; {{else}}
							<div class="select-wrapper">
								<select class="select-time-period balance-time" data-time="noon" data-side="end">
									<option selected>AM</option>
									<option>PM</option>
								</select>
