						</select>
					</div><!--

					--><span class="time-divider">:</span><!--

					--><div class="select-wrapper">
						<select class="balance-time" data-time="minute" data-side="start">
							<option selected>00</option>
							<option>15</option>
							<option>30</option>
							<option>45</option>
						</select>
					</div>
						{{#if hour24}} &nbsp; {{else}}
							<div class="select-wrapper">
								<select class="select-time-period balance-time" data-time="noon" data-side="start">
									<option selected>AM</option>
									<option>PM</option>
								</select>
							</div>
						{{/if}}
					</span>
			</li>
			<li>
				<span class="subsetting-name">End time</span>

					<span class="setting-dropdown">
					<div class="select-wrapper">
						<select class="balance-time" data-time="hour" data-side="end">
							{{#if hour24}}
								<option>00</option>
								<option>01</option>
